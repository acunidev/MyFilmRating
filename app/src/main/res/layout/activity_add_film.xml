<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical"
  tools:context=".activities.AddFilm">

  <EditText
    android:id="@+id/movieInputText"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_500"
    android:hint="@string/movie_name" />

  <EditText
    android:id="@+id/directorInputText"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_500"
    android:hint="@string/director_name" />

  <EditText
    android:id="@+id/yearInputText"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_500"
    android:hint="@string/year" />

  <RatingBar
    android:id="@+id/ratingBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_500" />

  <Button
    android:id="@+id/btnAddFilm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="96dp"
    android:text="@string/add_film" />

</LinearLayout>